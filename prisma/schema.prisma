generator client {
  provider = "prisma-client-js"
  output   = "generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  email            String   @unique
  password         String
  firstName        String?
  lastName         String?
  image            String?
  color            Int?
  resetToken       String?
  resetTokenExpiry BigInt?
  otp              String?
  otpExpiry        BigInt?
  theme            String   @default("dark")
  profileSetup     Boolean? @default(false)
  createdAt        DateTime @default(now())

  favourites Favourite[]
}

model Favourite {
  id        String   @id @default(uuid())
  userId    String
  recipeId  String
  title     String
  image     String
  cookTime  String
  servings  String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
